<div id="header">
    <h4>Product Update</h4>
</div>
<form class="form-horizontal" role="form">
  <div class="form-group">
      <label for="productName" class="col-sm-4 control-label">Product name:</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" name="productName" ng-model="product.name" id="productName">
      </div>
  </div>
    <div>
        <h4>Details</h4>
    </div>
    <div class="form-group">
        <label for="number" class="col-sm-4 control-label">Number:</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="number" ng-model="product.ProductDetail.number" id="number">
        </div>
  </div>
    <div class="form-group">
        <label for="price" class="col-sm-4 control-label">Price:</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="price" ng-model="product.ProductDetail.price" id="price">
        </div>
  </div>
    <div class="form-group">
        <label for="description" class="col-sm-4 control-label">Description:</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="description" ng-model="product.ProductDetail.description" id="description">
        </div>
  </div>
    <div class="form-group">
        <label for="companyName" class="col-sm-4 control-label">Company Name:</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" name="companyName" ng-model="product.ProductDetail.companyName" id="companyName">
        </div>
  </div>
    <div class="form-group">
        <label for="picFile" class="col-sm-4 control-label">Image Upload:</label>
        <div class="col-sm-8">
            <input type="file" ng-file-select ng-model="picFile" name="picFile">
        </div>
  </div>
   <div class="form-group">
        <label for="imgDisplay" class="col-sm-4 control-label">Image:</label>
        <div class="col-sm-8">
            <img name="imgDisplay" class="img-circle imgSmall" src="{{product.imageUrl}}" alt="" />
        </div>
  </div>
  <button class="btn btn-large btn-cancel pull-right" ng-click="cancelUpdateProduct()">Cancel</button>
  <button class="btn btn-large btn-success pull-right" ng-click="updateProduct(picFile, product)" style="margin-right:10px;">Update</button>
</form>

